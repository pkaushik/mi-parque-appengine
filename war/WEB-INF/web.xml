<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
   <servlet>
    <servlet-name>smsInvoker</servlet-name>
    <servlet-class>com.miparque.server.SMSInvoker</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>emailInvoker</servlet-name>
    <servlet-class>com.miparque.server.EmailInvoker</servlet-class>
  </servlet>
  <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.miparque.server.UserRegistration</servlet-class>
  </servlet>
  <servlet>
        <servlet-name>Notification</servlet-name>
        <servlet-class>com.miparque.server.NotificationManager</servlet-class>
  </servlet>
  <servlet>
        <servlet-name>IdeaGet</servlet-name>
        <servlet-class>com.miparque.server.IdeaGet</servlet-class>
  </servlet>
  
   <servlet>
        <servlet-name>IdeaUpdate</servlet-name>
        <servlet-class>com.miparque.server.IdeaUpdate</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>APIServlet</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
    <init-param>
      <param-name>org.restlet.application</param-name>
      <param-value>com.miparque.server.RestApplication</param-value>
    </init-param>
  </servlet>
  
    <servlet-mapping>
        <servlet-name>IdeaUpdate</servlet-name>
        <url-pattern>/idea/update</url-pattern>
   </servlet-mapping>  
  <servlet-mapping>
        <servlet-name>IdeaGet</servlet-name>
        <url-pattern>/idea/get</url-pattern>
   </servlet-mapping>  
  <servlet-mapping>
        <servlet-name>Notification</servlet-name>
        <url-pattern>/notify</url-pattern>
   </servlet-mapping>  
  <servlet-mapping>
        <servlet-name>Notification</servlet-name>
        <url-pattern>/notify</url-pattern>
   </servlet-mapping>  
  <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/reg</url-pattern>
   </servlet-mapping>      
   <servlet-mapping>
    <servlet-name>smsInvoker</servlet-name>
    <url-pattern>/sendSMS</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>emailInvoker</servlet-name>
    <url-pattern>/sendEmail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
     <servlet-name>APIServlet</servlet-name>
     <url-pattern>/api/*</url-pattern>
   </servlet-mapping>

  <welcome-file-list>
		<welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
